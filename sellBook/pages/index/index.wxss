/* 中心导航 */
.center_tab_container {
  margin-top: 250rpx;
  width: 100%;
}

.center_tab {
  /* 水平，垂直，水平模糊度，垂直模糊度，颜色，左上角inset */
  box-shadow: 6rpx 6rpx 6rpx 6rpx rgb(126, 124, 124);
  background-color:#fff;
  opacity: 0.9;
  height: 120rpx;
  width: 75%; 
  font: normal normal 30rpx "微软雅黑" ;
  color: #9966FF;
}
.tab_item_img {
  width: 60rpx;
  height: 60rpx;
}

.tab_item {
  width: 25%;
}

