/**index.wxss**/

.nav_container {
  position: relative;
}

.nav_img {
  position: absolute;
  width: 100%;
}

.nav {
  background-color: #000;
  opacity: 0.7;
  height: 20px;
}

.nav_bg {
  background-color: #000;
  opacity: 0.6;
  height: 48px;
}

.nav_text {
  font: normal normal 21px "微软雅黑";
  color: #fff;
}

/* 搜索 */

.search_locate {
  color: #fff;
  opacity: 0.9;
  font: normal normal 36rpx "微软雅黑";
  width: 15%;
}
.search_locate_icon {
  width: 38rpx;
  height: 38rpx;
}

.search_input_container {
  margin: 10rpx 1%;
  width: 68%;
  height: 55rpx;
  line-height: 55rpx;
  background-color: #fff;
  opacity: 0.7;
  border-radius: 7px;
}
.search_input{
  width: 80%;
}
.search_icon {
  width: 40rpx;
  height: 40rpx;
}

.search_cancle_icon {
 width: 40rpx;
  height: 40rpx;
}

.search_cancle {
  color: #fff;
  font: normal normal 36rpx "微软雅黑";
  opacity: 0.9;
  width: 11%;
}

